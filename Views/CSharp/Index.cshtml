@{
    ViewData["Title"] = "C# Task";
    var taskDescription = ViewData["TaskDescription"]?.ToString() ?? "";
    var taskId = (int)ViewData["TaskId"];
    var isCSharpCorrect = ViewData["IsCSharpCorrect"] as bool?;
    var csharpCode = ViewData["CSharpCode"]?.ToString() ?? "";
    var csharpInput = ViewData["CSharpInput"]?.ToString() ?? "";
}

<h1>C# Task</h1>
<p>@taskDescription</p>

<form method="post" asp-action="RunCSharpCode">
    <input type="hidden" name="taskId" value="@taskId" />
    <label for="code">Enter Your Code:</label><br>
    <textarea name="code" rows="10" cols="50">@csharpCode</textarea><br><br>

    <label for="input">Enter Input for Code:</label><br>
    <textarea name="input" rows="5" cols="50">@csharpInput</textarea><br><br>

    <input type="submit" value="Run Code">
</form>

<form method="post" asp-action="Restart">
    <input type="submit" value="Restart" />
</form>

<hr>

@if (ViewData["CSharpResult"] != null)
{
    <h3>Execution Result:</h3>
    <pre>@ViewData["CSharpResult"]</pre>
    @if (isCSharpCorrect.HasValue)
    {
        @if (isCSharpCorrect.Value)
        {
            <div style="color: green; font-size: 24px;">&#x25CF;</div> <!-- Green circle -->
        }
        else
        {
            <div style="color: red; font-size: 24px;">&#x25CF;</div> <!-- Red circle -->
        }
    }
}